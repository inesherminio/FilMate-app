<div id="profile-movies">
  <h3 class="profile-div-titles">Your latest random movies</h3>
  <div class="profile-container">
{{#each movies}}
<div class="card profile-movie-card" style="width: 12rem;">
  <img src="{{this.image}}" class="card-img-top" width="50" alt="{{this.title}} poster">
  <div class="card-body">
    <h5 class="card-title">{{this.title}}</h5>
  </div>
</div>
{{/each}}
</div>
  <h6 class="profile-div-links"><a href="/movie-list">See the complete list</a></h3>
</div>

<div id="profile-interests">


</div>


<table class="table">
  <thead>
    <tr>
      <th scope="col">Your interests</th>
    </tr>
  </thead>
  <tbody>
    {{#each interest}}
      <tr>
        <td>{{this.activity}}</td>
        <td>
          <form action="/profile/delete" method="POST" id="delete-form">
          <input type="hidden" name="activity" value="{{this._id}}">
          <button type="submit"  class="btn btn-secondary" >Delete</button>
          </form>
          </td> 
    {{/each}}
    <br>
    <tr>
      <form action="/profile/create" method="POST" id="activity-form">
        <label for="activity">Add your interests here</label>
        <input type="text" name="activity" ></input>

        <button type="submit">submit</button>
      </form>
  </tbody>
</table>



<table class="table">
  <thead>
    <tr>
      <th scope="col">Your friends</th>
    </tr>
  </thead>
  <tbody>
    {{#each connections}}
      <tr>
        <td>
          <img
          src="{{this.friend.profilePic}}"
          alt="{{this.friend.username}}'s profile picture"
          width="50"
        />
          {{this.friend.username}}
          <form action="/profile/unfollow" method="POST">
          <input type="hidden" name="connection" value="{{this._id}}">
          <button type="submit">
            Unfollow
          </button>
          </form>
          </td>
      </tr>
    {{/each}}
  </tbody>
</table>
